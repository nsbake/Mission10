@{
}
@model Book

<div class="col-6 mb-3">
    <div class="card">
        <div class="card-body">
            <span class="badge bg-success" style="float:right">
                Price: $@Model.Price
            </span>
            <h5 class="card-title">@Model.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Author</h6>

            <ul>
                <li>Publisher: @Model.Publisher</li>
                <li>ISBN: @Model.Isbn</li>
                <li>Classification @Model.Classification</li>
                <li>Category: @Model.Category</li>
                <li>Number of Pages: @Model.PageCount</li>
            </ul>

            <form method="post" asp-page="/Cart">
                <input type="hidden" asp-for="@Model.BookId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text">
                    <button type ="submit" class="btn btn-primary btn-sm float-end">Add to Cart</button>
                </span>
            </form>
        </div>
    </div>
</div>