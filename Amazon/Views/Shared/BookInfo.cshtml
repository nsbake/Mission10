@{
}
@model Book

<div class="col-6 mb-3">
    <div class="card">
        <div class="card-body">
            <span class="badge bg-success" style="float:right">
                Price: $@Model.Price
            </span>
            <h5 class="card-title">@Model.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Author</h6>

            <ul>
                <li>Publisher: @Model.Publisher</li>
                <li>ISBN: @Model.Isbn</li>
                <li>Classification @Model.Classification</li>
                <li>Category: @Model.Category</li>
                <li>Number of Pages: @Model.PageCount</li>
            </ul>
        </div>
    </div>
</div>