@page
@model Amazon.Pages.CartModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <th>Book</th>
        <th>Quantity</th>
        <th>Cost</th>
        <th>Subtotal</th>
    </thead>
    <tbody>
        @foreach(var i in Model.cart.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>@i.Book.Price</td>
                    <td>@(i.Quantity * i.Book.Price)</td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalcTotal().ToString("C")</td>
        </tr>
    </tfoot>
</table>

<a class="btn btn-primary" style="float:right" href="@Model.ReturnUrl">Continue Shopping</a>